{
    "name": "top100",
    "version": "1.0.0",
    "description": "Application to set your top 100 favourite movies",
    "main": "index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "start": "ts-node src/application/start.ts",
        "test:unit": "jest --testPathPattern test/unit/*",
        "test:integration": "jest --testPathPattern test/integration/*",
        "eslint:check": "npx eslint .",
        "eslint:fix": "npx eslint --fix .",
        "prettier:check": "npx prettier --check .",
        "prettier:fix": "npx prettier --write .",
        "verify": "npx tsc && npm run test:unit && npm run eslint:check && npm run prettier:check"
    },
    "author": "James Cockfield",
    "license": "ISC",
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.1",
        "@types/node-fetch": "^2.6.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "husky": "^8.0.1",
        "prettier": "^2.6.2",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.4",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "joi": "^17.6.0",
        "node-fetch": "^2.6.0",
        "ts-node": "^10.8.0"
    }
}
